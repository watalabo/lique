{
  "name": "lique-vscode",
  "displayName": "lique-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:qasm"
  ],
  "main": "./dist/client.js",
  "workspaces": [
    "packages/*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "lique-vscode.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "qasm",
        "extensions": [
          ".qasm"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build:all": "npm run build:client && npm run build:server",
    "build:client": "esbuild client=./packages/client/src --bundle --outdir=dist --external:vscode --format=cjs --platform=node",
    "build:server": "esbuild server=./packages/server/src --bundle --outdir=dist --external:vscode --format=cjs --platform=node",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "biome lint --write src",
    "format": "biome format --write src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "20.x",
    "@types/vscode": "1.95.0",
    "@vscode/test-cli": "0.0.10",
    "@vscode/test-electron": "2.4.1",
    "esbuild": "0.24.0",
    "npm-run-all": "4.1.5",
    "typescript": "5.6.3"
  }
}
