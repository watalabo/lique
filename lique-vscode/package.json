{
  "name": "lique-vscode",
  "displayName": "lique-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:qasm"
  ],
  "main": "./dist/client.js",
  "workspaces": [
    "packages/*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "lique-vscode.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "qasm",
        "extensions": [
          ".qasm"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build:all": "npm run build:client && npm run build:server",
    "build:client": "esbuild client=./packages/client/src --bundle --outdir=dist --external:vscode --format=cjs --platform=node",
    "build:server": "esbuild server=./packages/server/src --bundle --outdir=dist --external:vscode --format=cjs --platform=node",
    "build:wasm": "wasm-pack build ../lique_ls --target nodejs --out-dir ../lique-vscode/dist && rm -f ./dist/{.gitignore,package.json}",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "check-types": "tsc --noEmit",
    "lint": "biome lint --write packages",
    "format": "biome format --write packages"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "20.x",
    "@types/vscode": "1.95.0",
    "esbuild": "0.24.0",
    "typescript": "5.6.3"
  }
}
